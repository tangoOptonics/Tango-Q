<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/mainColor" android:width="1dp"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:drawable="@drawable/icon_part_checkbox_enabled"
                android:gravity="left|center_vertical">
                <inset android:insetLeft="10dp"/>
            </item>

        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="@color/subColor200" android:width="1dp"/>
                    <solid android:color="@color/white"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/icon_part_checkbox_disabled"
                android:left="4dp"
                android:gravity="left|center_vertical">
                <inset android:insetLeft="10dp"/>
            </item>
        </layer-list>
    </item>
</selector>